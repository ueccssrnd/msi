::-webkit-scrollbar-track
  box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
  background-color: #f5f5f5

::-webkit-scrollbar
  width: 6px
  background-color: #f5f5f5

::-webkit-scrollbar-thumb
  background-color: #000


html, body
  height 100%
  margin 0
  padding 0
  width 100%

body
  background url('../img/bg.jpg') fixed
  background-size cover

h1, h2, h3, h4, h5, h6
  padding 0
  margin 0

nav.fixed-top
  position fixed
  top 0
  z-index 99999
#wrapper
  height 100%
  padding-top 40px
  position relative
  width 100%
  .container
    height 100%
  > .spacer
    height 80px
    width 100%
    background #ddd
    border-bottom 1px solid #cccccc
    overflow hidden
    > h1
      height 100%
      margin 0
      padding 0 0 0 200px
      color #d6d6d6
      font 4.5em Segoe Ui Light, Helvetica Neue, Arial
      line-height 1.8em

#top-nav
  background #3f4347
  background-image: linear-gradient(bottom, #3F4347 100%, #34393F 0%)
  background-image: -o-linear-gradient(bottom, #3F4347 100%, #34393F 0%)
  background-image: -moz-linear-gradient(bottom, #3F4347 100%, #34393F 0%)
  background-image: -webkit-linear-gradient(bottom, #3F4347 100%, #34393F 0%)
  background-image: -ms-linear-gradient(bottom, #3F4347 100%, #34393F 0%)
  -webkit-box-shadow  0px 1px 4px 0px rgba(0, 0, 0, 0.25)
  box-shadow  0px 1px 4px 0px rgba(0, 0, 0, 0.25)
  color #fff
  height 40px
  width 100%
  .branding
    height 100%
    vertical-align middle
    line-height 40px
    text-transform uppercase
    font-weight 400

#primary-nav
  height 100%
  list-style none
  margin 0
  text-align right
  &:before
    content ''
    display inline-block
    height 100%
    vertical-align middle
  > li
    background #3f4347
    border-left 1px solid #2c2e31
    border-top 1px solid #2c2e31
    border-bottom 1px solid #2c2e31
    box-sizing border-box
    display inline-block
    height 30px
    line-height 30px
    text-align center
    vertical-align middle
    width 30px
    &:last-child
      border-right 1px solid #2c2e31
  > li.search, li#secondary-nav
    text-align left
    width 180px
#txtSearch
  background #464a4e
  border 0
  border-right 1px solid #2c2e31
  color #ccc
  display inline-block
  float left
  height 100%
  padding 0 5px
  outline none
  width 83.33333333333333%
#btnSearch
  background transparent
  box-sizing border-box
  border 0
  color #fff
  display inline-block
  height 100%
  margin 0
  padding 0
  text-align center
  width 16.66666666666667%
#secondary-nav
  padding-left 5px

#breadcrumbs
  background #efefef
  border-bottom 1px solid #dadada
  height 25px
  > ul
    height 100%
    list-style none
    margin 0
    > li
      display inline-block
      height 100%
      line-height 25px
      vertical-align middle
      width auto
      i[class*='icon-']
        margin 0 5px
      a
        text-decoration none
        text-shadow -1px -1px -1px rgba(255,255,255,0.7)
        transition 0.3s ease color
        &:hover
          color #336699

#content
  color #fff
  bottom 0
  left 0
  position absolute
  right 0
  top 145px
  overflow auto
        
      
// login
#login
  position absolute
  left 50%
  top 50%
  height 300px
  width 300px
  margin -150px 0 0 -150px
  > h1
    color #fff
    letter-spacing 1px
    text-shadow 0 0 10px rgba(0,0,0,0.3)
    text-align center
  input
    background rgba(0,0,0,0.3)
    border 1px solid rgba(0,0,0,0.3)
    border-radius 4px
    box-shadow inset 0 -5px 45px rgba(100,100,100,0.2), 0 1px 1px rgba(255,255,255,0.2)
    color #fff
    margin-bottom 10px
    outline none
    padding 10px
    text-shadow 1px 1px 1px rgba(0,0,0,0.3)
    transition box-shadow .5s ease
    width 100%
  button
    padding 10px
    margin-bottom 10px
    text-shadow 1px 1px 1px rgba(0,0,0,0.3)

// view students
#students.container
  padding-top 40px
  > ul.letters
    list-style none
    margin 0
    padding 0
    &.fixed-top
      position absolute
      left 0
      top 0
      right 0
      height 40px
      width 100%
    > li
      background rgba(0,0,0,0.2)
      border-right 1px solid rgba(0,0,0,0.3)
      border-bottom 1px solid rgba(0,0,0,0.3)
      box-shadow inset  0 1px 1px rgba(255,255,255,0.2) 
      box-sizing border-box
      color #fff
      display inline-block
      line-height 40px
      height 100%
      width 3.846153846153846%
      text-align center
      text-shadow 1px 1px 1px rgba(0,0,0,0.3)
      text-transform uppercase
      &:last-child
        border-right 0
        box-shadow none
      > a
        color #fff
        text-decoration none
        &:hover
          background #fff
          display block
          color #000

#students
  margin 0
  padding 0

// template styles
h1.title, span.icn-desc
  display inline-block
  height 80px
  vertical-align top
span.icn-desc.title
  color #e8c00c
  font-weight 500
  line-height 40px
  margin-left 20px
  text-align right
  > a
    color #bfe80c
    display block
    text-decoration none
    transition ease color 0.3s
    &:hover
      color #e8c00c
    > i[class*='icon']
      font-size 2em
      vertical-align middle
      margin-right 5px
#primary-content
  float right
  padding 20px 20px 0 20px
  width 75%
  > .search
    // display none
    height 80px
    background rgba(0,0,0,0.3)
    border 1px solid #000
    padding 10px
    > label
      color #eee
      display block
      font-size 1.2em
      font-weight 500
    > input[type='search']
      background rgba(255,255,255,0.9)
      border 1px solid #ccc
      padding-left 20px
      height 30px
      width 100%
#sidebar
  background rgba(0,0,0,0.08)
  border-right 1px solid rgba(0,0,0,0.1)
  width 25%
  min-width 300px
  padding 20px 20px 0 20px
  position fixed
  left 0
  top 145px
  bottom 0
  > .nav-list
    list-style none
    margin 0
    padding 0
    > li
      border-radius 4px
      height 30px
      line-height 30px
      margin-bottom 3px
      &:hover
        background rgba(0,0,0,0.1)
      a
        color #fff
        display block
        text-decoration none
        &:hover
          color #e8c00c
      i[class*='icon']
        margin 0 15px 0 15px
      &.active
        background #336699
  > .list-title
    color #aeaeae
    font-weight 500
    text-shadow -1px -1px 1px rgba(0,0,0,0.3)
    border-bottom 1px solid rgba(255,255,255,0.05)
    padding-bottom: 5px
    padding-left 10px

#student-list tr.student
  border-top 1px solid rgba(255,255,255,0.1) !important
#student-list td
  border 0
  vertical-align middle
#student-list img
  border 3px solid #fff
  border-radius 60px
  height 60px
  width 60px
  
#generate-report
  background #bfe80c
  color #333
  float right
  font-weight 500
  transition background ease 0.3s
  > i[class*='icon']
    margin 0 5px 0 5px
  &:hover
    background #e8c00c

.dialog
  background rgba(255,255,255,0.9)
  border 1px solid #fff
  display none 
  padding 10px
  position fixed
  left 50%
  top 50%
  min-height 300px
  height auto
  width 300px
  margin -150px 0 0 -150px
  z-index 999999
  > button.close
    position absolute
    top 10px
    right 10px
    margin 0
  > h1.title
    color #444
    height auto
    margin-bottom 20px
    vertical-align middle
    i[class*='icon']
      color #e8c00c
      font-size 0.8em
      vertical-align top
      margin-right 5px
  .form-control
    margin-bottom 5px
  button
    margin-top 15px
.overlay
  background rgba(0,0,0,0.7)
  display none
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 99999

.hide
  display none
.show
  display block

[contentEditable]
  transition ease all 0.1s

[contentEditable]:focus  
  outline-color #bfe80c
  padding 5px
