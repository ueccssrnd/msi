@media screen and (max-width: 480px)
  #students > li.student
    border-bottom 1px solid rgba(0,0,0,0.1)
    box-shadow 0 1px 0 rgba(255,255,255,0.1)
    padding 5px 0 5px 0
    overflow hidden
    position relative
    > img
      border 4px #fff solid
      border-radius 40px
      height 80px
      margin-right 5px
    > a
      color #fff
      text-decoration none
